<% layout('layouts/boilerplate') %> 
<h1 class="text-center">Login To Lodgify</h1>
<p class="text-center">Please fill in the form below to log in.</p>
<div class="row mt-3">
    <div class="col-8 offset-2">
        <form action="/login" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Username:</label>
                <input type="text" class="form-control" id="username" name="username" placeholder="Username" required>
                <div class="invalid-feedback">Please Enter a Username</div>
                <label for="password" class="form-label">Password:</label>
                <input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
                <div class="invalid-feedback">Please Enter a Password</div>
                <button class="btn btn-success mt-3 mb-3">Login</button>
                <p class="mt-3">Don't have an account? <a href="/register">Sign Up</a></p>
                
            </div>

        </form>
    </div>
</div>
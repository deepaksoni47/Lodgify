<% layout('layouts/boilerplate') %> <!-- This line tells EJS to use the boilerplate layout file -->

<div class="row mt-3">
    <div class="col-8 offset-2">
        <h1 class="text-center">Sign Up</h1>
        <p class="text-center">Please fill in the form below to create an account.</p>

        <form action="/register" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Username:</label>
                <input type="text" class="form-control" id="username" name="username" placeholder="Username" required>
                <div class="invalid-feedback">Please Enter a Username</div>
                <label for="email" class="form-label">Email:</label>
                <input type="email" class="form-control" id="email" name="email" placeholder="Email" required>
                <div class="invalid-feedback">Please Enter a Valid Email</div>
                <label for="password" class="form-label">Password:</label>
                <input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
                <div class="invalid-feedback">Please Enter a Password</div>
                <button class="btn btn-success mt-3 mb-3">SignUp</button>
                <a href="/login" class="btn btn-link">Already have an account? Login</a>
                <p class="mt-3">By signing up, you agree to our <a href="/terms">Terms of Service</a> and <a href="/privacy">Privacy Policy</a>.</p>
                

            </div>

        </form>
    </div>
</div>